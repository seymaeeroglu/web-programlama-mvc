@model GymProje.Models.Antrenor

@{
    ViewData["Title"] = "Antrenörü Düzenle";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">Bilgileri Güncelle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ResimYolu" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3 text-center">
                                <label class="form-label d-block">Mevcut Fotoğraf</label>
                                @if (!string.IsNullOrEmpty(Model.ResimYolu))
                                {
                                    <img src="@Model.ResimYolu" class="rounded-circle mb-2" width="100" height="100" style="object-fit:cover" />
                                }
                                else
                                {
                                    <span class="badge bg-secondary p-2">Resim Yok</span>
                                }
                                <input type="file" name="resimDosyasi" class="form-control mt-2" accept=".jpg,.jpeg,.png" />
                                <small class="text-muted">Değiştirmek isterseniz yeni dosya seçin.</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                                <input asp-for="AdSoyad" class="form-control" />
                                <span asp-validation-for="AdSoyad" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="UzmanlikId" class="form-label">Uzmanlık</label>
                                <select asp-for="UzmanlikId" class="form-control" asp-items="ViewBag.UzmanlikId"></select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CalismaBaslangicSaati" class="form-label">Başlangıç Saati</label>
                                <input asp-for="CalismaBaslangicSaati" type="number" min="0" max="23" class="form-control" />
                                <span asp-validation-for="CalismaBaslangicSaati" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CalismaBitisSaati" class="form-label">Bitiş Saati</label>
                                <input asp-for="CalismaBitisSaati" type="number" min="0" max="23" class="form-control" />
                                <span asp-validation-for="CalismaBitisSaati" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-warning">Güncelle</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>