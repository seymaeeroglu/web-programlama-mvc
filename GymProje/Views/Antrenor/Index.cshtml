@model IEnumerable<GymProje.Models.Antrenor>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Antrenör Kadrosu</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i> Yeni Antrenör Ekle
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Fotoğraf</th>
                    <th>Ad Soyad</th>
                    <th>Uzmanlık</th>
                    <th>Çalışma Saatleri</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ResimYolu))
                            {
                                <img src="@item.ResimYolu" class="rounded-circle" width="50" height="50" style="object-fit:cover;" />
                            }
                            else
                            {
                                <span class="badge bg-secondary">Resim Yok</span>
                            }
                        </td>
                        <td class="fw-bold">@item.AdSoyad</td>
                        <td>
                            <span class="badge bg-info text-dark">@item.Uzmanlik?.Ad</span>
                        </td>
                        <td>@item.CalismaBaslangicSaati:00 - @item.CalismaBitisSaati:00</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>