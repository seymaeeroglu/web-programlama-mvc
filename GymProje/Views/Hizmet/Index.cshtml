@model IEnumerable<GymProje.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hizmet Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Yeni Hizmet Ekle
        </a>
    </div>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Branş</th>
                <th>Süre (Dk)</th>
                <th>Ücret (TL)</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><span class="badge bg-secondary">@item.Uzmanlik?.Ad</span></td>
                    <td>@item.SureDk dk</td>
                    <td>@item.Ucret.ToString("C2")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>