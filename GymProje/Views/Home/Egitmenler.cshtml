@model IEnumerable<GymProje.Models.Antrenor>

@{
    ViewData["Title"] = "Eğitmen Kadrosu";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-uppercase">Eğitmen Kadromuz</h1>
        <p class="text-muted lead">Alanında uzman antrenörlerimizle hedeflerinize ulaşın.</p>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow border-0 text-center hover-effect">

                    <div class="card-img-top pt-4">
                        @if (!string.IsNullOrEmpty(item.ResimYolu))
                        {
                            <img src="@item.ResimYolu" class="rounded-circle border border-3 border-primary"
                                 width="150" height="150" style="object-fit:cover;" alt="@item.AdSoyad">
                        }
                        else
                        {
                            <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center border border-3 border-secondary"
                                 style="width: 150px; height: 150px;">
                                <i class="bi bi-person-fill text-secondary" style="font-size: 4rem;"></i>
                            </div>
                        }
                    </div>

                    <div class="card-body">
                        <h4 class="card-title fw-bold mt-2">@item.AdSoyad</h4>

                        <span class="badge bg-info text-dark mb-3 fs-6">
                            @item.Uzmanlik?.Ad Uzmanı
                        </span>

                        <hr />

                        <p class="card-text text-muted">
                            <i class="bi bi-clock-history text-danger"></i> Çalışma Saatleri:<br>
                            <strong>@item.CalismaBaslangicSaati:00 - @item.CalismaBitisSaati:00</strong>
                        </p>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Randevu" asp-action="Create" asp-route-antrenorId="@item.Id"
                               class="btn btn-outline-primary rounded-pill w-75 mt-2">
                                <i class="bi bi-calendar-plus"></i> Randevu Al
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary rounded-pill w-75 mt-2">Giriş Yap</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>