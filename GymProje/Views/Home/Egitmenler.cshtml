@model IEnumerable<GymProje.Models.Antrenor>

@{
    ViewData["Title"] = "Eğitmen Kadrosu";
}

<div class="container mt-5 py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-uppercase">EĞİTMEN KADROMUZ</h1>
        <p class="text-muted lead">Alanında uzman antrenörlerimizle hedeflerinize ulaşın.</p>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow border-0 text-center hover-effect">

                    <div class="card-body p-5">
                        <h3 class="card-title fw-bold text-dark mb-2">@item.AdSoyad</h3>

                        <span class="badge bg-primary px-3 py-2 mb-4 rounded-pill" style="font-size: 0.9rem;">
                            @if (item.Uzmanlik != null)
                            {
                                @item.Uzmanlik.Ad
                            }
                            else
                            {

                                <text>Genel</text>
                            }
     Uzmanı
                        </span>

                        <div class="text-muted mb-4">
                            <i class="bi bi-clock-history text-danger me-1"></i>
                            <span class="fw-bold">Çalışma Saatleri:</span><br>
                            @item.CalismaBaslangicSaati:00 - @item.CalismaBitisSaati:00
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Randevu" asp-action="Create" asp-route-antrenorId="@item.Id"
                               class="btn btn-outline-primary rounded-pill w-100 fw-bold">
                                <i class="bi bi-calendar-plus me-2"></i> Randevu Al
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary rounded-pill w-100 fw-bold">Giriş Yap</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
</style>