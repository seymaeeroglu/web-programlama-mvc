@{
    ViewData["Title"] = "Raporlar";
}

<div class="container mt-4">

    <h2 class="mb-4"><i class="bi bi-bar-chart-line-fill"></i> Yönetim Raporları</h2>

    <div class="row text-center mb-5">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow p-3">
                <h3><i class="bi bi-people-fill"></i></h3>
                <h2 id="lblUye">0</h2>
                <p>Toplam Üye</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow p-3">
                <h3><i class="bi bi-person-badge-fill"></i></h3>
                <h2 id="lblAntrenor">0</h2>
                <p>Antrenör Sayısı</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow p-3">
                <h3><i class="bi bi-clock-history"></i></h3>
                <h2 id="lblBekleyen">0</h2>
                <p>Onay Bekleyen</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow p-3">
                <h3><i class="bi bi-tags-fill"></i></h3>
                <h2 id="lblHizmet">0</h2>
                <p>Hizmet Çeşidi</p>
            </div>
        </div>
    </div>

    <div class="card shadow mb-5">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">En Çok Tercih Edilen Eğitmenler (Top 5)</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Eğitmen Adı</th>
                        <th>Toplam Randevu Sayısı</th>
                    </tr>
                </thead>
                <tbody id="tblEgitmenler">
                    <tr><td colspan="2" class="text-center">Yükleniyor...</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <hr class="my-5" style="border-top: 3px solid #dc3545; opacity: 1;">

    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="m-0"><i class="bi bi-cpu-fill"></i> REST API & LINQ Kontrol Paneli</h4>
            <span class="badge bg-white text-danger fw-bold">ÖDEV KISMI</span>
        </div>
        <div class="card-body bg-light">
            <div class="row align-items-end">
                <div class="col-md-5">
                    <label class="fw-bold mb-2">Hangi Tarihi Sorgulayalım? (LINQ Where)</label>
                    <input type="date" id="apiTarih" class="form-control form-control-lg" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-dark btn-lg w-100" onclick="ApiRaporuGetir()">
                        <i class="bi bi-search"></i> Verileri Getir
                    </button>
                </div>
            </div>

            <div class="mt-4">
                <h5 class="text-secondary border-bottom pb-2">API'den Gelen Canlı Sonuçlar (JSON):</h5>
                <div class="table-responsive">
                    <table class="table table-hover bg-white shadow-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>Müşteri</th>
                                <th>Hizmet / Branş</th>
                                <th>Saat</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody id="apiTabloGovdesi">
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">
                                    <em>Henüz sorgu yapılmadı. Tarih seçip butona basın.</em>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // 1. Genel İstatistikleri Çek (Senin Eski Kodun)
            $.ajax({
                url: '/api/RaporApi/GenelIstatistik',
                type: 'GET',
                success: function (data) {
                    $("#lblUye").text(data.toplamUye);
                    $("#lblAntrenor").text(data.toplamAntrenor);
                    $("#lblHizmet").text(data.toplamHizmet);
                    $("#lblBekleyen").text(data.bekleyenRandevular);
                }
            });

            // 2. Popüler Eğitmenleri Çek (Senin Eski Kodun)
            $.ajax({
                url: '/api/RaporApi/PopulerEgitmenler',
                type: 'GET',
                success: function (data) {
                    var tabloHtml = "";
                    $.each(data, function (index, item) {
                        tabloHtml += `<tr>
                                        <td class="fw-bold">${item.egitmenAdi}</td>
                                        <td><span class="badge bg-primary rounded-pill">${item.randevuSayisi}</span></td>
                                      </tr>`;
                    });
                    $("#tblEgitmenler").html(tabloHtml);
                },
                error: function() {
                    $("#tblEgitmenler").html("<tr><td colspan='2'>Veri bulunamadı.</td></tr>");
                }
            });
        });

        // 3. YENİ API FONKSİYONU (Bizim Eklediğimiz Kısım)
        async function ApiRaporuGetir() {
            var tarih = document.getElementById("apiTarih").value;
            var tablo = document.getElementById("apiTabloGovdesi");

            // Yükleniyor animasyonu
            tablo.innerHTML = '<tr><td colspan="4" class="text-center py-3"><div class="spinner-border text-danger"></div> Veriler API\'den çekiliyor...</td></tr>';

            try {
                // REST API'ye İstek At
                var response = await fetch(`/api/RaporApi/GunlukRapor?tarih=${tarih}`);

                if (!response.ok) throw new Error("API Bağlantı Hatası");

                var data = await response.json();

                tablo.innerHTML = ""; // Tabloyu temizle

                if(data.length === 0) {
                    tablo.innerHTML = '<tr><td colspan="4" class="text-center text-danger fw-bold py-3"><i class="bi bi-exclamation-circle"></i> Bu tarihte kayıtlı randevu bulunamadı!</td></tr>';
                    return;
                }

                // Gelen JSON verisini tabloya bas
                data.forEach(item => {
                    var row = `<tr>
                        <td class="fw-bold">${item.musteri}</td>
                        <td><span class="badge bg-info text-dark">${item.hizmet}</span></td>
                        <td>${item.saat}</td>
                        <td>
                            ${item.durum === 'Onaylandı' || item.durum === 'Onaylı'
                                ? '<span class="badge bg-success">Onaylı</span>'
                                : '<span class="badge bg-warning text-dark">Bekliyor</span>'}
                        </td>
                    </tr>`;
                    tablo.innerHTML += row;
                });

            } catch (err) {
                console.error(err);
                tablo.innerHTML = `<tr><td colspan="4" class="text-center text-danger">Hata oluştu: ${err.message}</td></tr>`;
            }
        }
    </script>
}