<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ONE CLUB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    ONE <span style="color: var(--brand-red);">CLUB</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">ANASAYFA</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Hizmetler">PAKETLER</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Egitmenler">EĞİTMENLER</a></li>

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="AiKoc" asp-action="Index">AI KOÇ</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">RANDEVU</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Randevu" asp-action="Create">Randevu Al</a></li>
                                    <li><a class="dropdown-item" asp-controller="Randevu" asp-action="Index">Randevularım</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger" href="#" role="button" data-bs-toggle="dropdown">YÖNETİM PANELİ</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Uzmanlik" asp-action="Index">Branş Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Antrenor" asp-action="Index">Antrenör Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Hizmet" asp-action="Index">Hizmet Yönetimi</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Randevu" asp-action="Index">Randevu Talepleri</a></li>
                                    <li><a class="dropdown-item" asp-controller="Rapor" asp-action="Index">İstatistikler</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="text-white">ONE CLUB</h5>
                    <p class="small">Şehrin en prestijli spor kulübü. Sınırlarını zorla, değişimi başlat.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-white">HIZLI LİNKLER</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Hakkımızda</a></li>
                        <li><a href="#">Kulüpler</a></li>
                        <li><a href="#">Blog</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-white">İLETİŞİM</h5>
                    <p class="small"><i class="bi bi-geo-alt-fill text-danger"></i> Sakarya Üniversitesi Kampüsü</p>
                    <p class="small"><i class="bi bi-telephone-fill text-danger"></i> 444 1 900</p>
                    <div class="mt-3">
                        <a href="#" class="text-white me-3 fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4 border-top border-secondary pt-3 small">
                &copy; 2025 - ONE CLUB - Tüm Hakları Saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>