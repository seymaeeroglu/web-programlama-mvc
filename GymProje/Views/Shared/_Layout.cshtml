<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ONE CLUB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    ONE <span style="color: var(--brand-red);">CLUB</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">ANASAYFA</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Hizmetler">PAKETLER</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Egitmenler">EĞİTMENLER</a></li>

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="AiKoc" asp-action="Index">AI KOÇ</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">RANDEVU</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Randevu" asp-action="Create">Randevu Al</a></li>
                                    <li><a class="dropdown-item" asp-controller="Randevu" asp-action="Index">Randevularım</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger" href="#" role="button" data-bs-toggle="dropdown">YÖNETİM PANELİ</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Uzmanlik" asp-action="Index">Branş Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Antrenor" asp-action="Index">Antrenör Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Hizmet" asp-action="Index">Hizmet Yönetimi</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Randevu" asp-action="Index">Randevu Talepleri</a></li>
                                    <li><a class="dropdown-item" asp-controller="Rapor" asp-action="Index">İstatistikler</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="py-4 mt-auto" style="background-color: #111; border-top: 1px solid #222;">
        <div class="container text-center">

            <div class="mb-3">
                <h5 class="text-white fw-bold m-0" style="letter-spacing: 2px;">ONE CLUB</h5>
                <small class="text-muted" style="font-size: 0.85rem;">Şehrin en prestijli spor kulübü.</small>
            </div>

            <div class="text-secondary small">
                &copy; 2025 - ONE CLUB - Tüm Hakları Saklıdır.
            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>