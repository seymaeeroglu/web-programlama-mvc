@using Microsoft.AspNetCore.Identity
@using GymProje.Models

@inject SignInManager<Kullanici> SignInManager
@inject UserManager<Kullanici> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // KULLANICI GİRİŞ YAPMIŞSA BURASI GÖRÜNÜR
        <li class="nav-item">
            <a class="nav-link text-dark" href="#">Merhaba, @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-link text-dark" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
        </li>
    }
    else
    {
        // GİRİŞ YAPILMAMIŞSA BURASI GÖRÜNÜR
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Giriş Yap</a>
        </li>
    }
</ul>