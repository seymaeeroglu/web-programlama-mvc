@model GymProje.Models.Uzmanlik

@{
    ViewData["Title"] = "Yeni Branş Ekle";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Yeni Branş Tanımla</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label asp-for="Ad" class="form-label">Uzmanlık Adı</label>
                        <input asp-for="Ad" class="form-control" placeholder="Örn: Pilates" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>